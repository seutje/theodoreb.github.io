---
title: RSS Feed.
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>

    <title>{{ site.name | replace:"&nbsp;",' ' }}</title>
    <description>{{ site.description | replace:"&nbsp;",' ' }}</description>
    <link>http://{{ site.domain }}{{ site.baseurl }}</link>
    <lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
    <language>en</language>

    {% for post in site.tags.drupal-planet %}
    <item>
      <title>{{ post.title }}</title>
      <link>http://{{ site.domain }}{{ post.url }}</link>
      <guid>http://{{ site.domain }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
      <description>{{ post.content | markdownify }}</description>
      <category>{{ post.tags | join: ',') }}</category>
    </item>
    {% endfor %}

  </channel>
</rss>
